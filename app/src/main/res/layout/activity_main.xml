<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.clownfish.Activity.MainActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
       <!-- app:layout_behavior="@string/appbar_scrolling_view_behavior" />-->

    <com.example.administrator.clownfish.fragmentAdapter.NotScrollViewPager
        android:id="@+id/mainPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
      <!--  app:layout_behavior="@string/appbar_scrolling_view_behavior" />-->
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="4"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/homePageLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

           <ImageView
               android:id="@+id/homePageImageView"
               android:layout_gravity="center"
               android:layout_width="26dp"
               android:layout_height="26dp"
               android:src="@mipmap/ic_index_default"/>

            <TextView
                android:id="@+id/homePageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="首页"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/haitaoLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/haitaoImageView"
                android:layout_gravity="center"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@mipmap/ic_mall_default"
                />

            <TextView
                android:id="@+id/haitaoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="嗨淘"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/walletLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/walletImageView"
                android:layout_gravity="center"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@mipmap/ic_wallet_default"/>

            <TextView
                android:id="@+id/walletTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="钱包"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/mineLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mineImageView"
                android:layout_gravity="center"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@mipmap/ic_mine_default"/>

            <TextView
                android:id="@+id/mineTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="我"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>
