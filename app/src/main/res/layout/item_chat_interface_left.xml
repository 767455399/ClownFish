<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timeTextView"
        android:text="2016 08 01 14:44"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <TextView
            android:padding="10dp"
            android:textSize="20sp"
            android:background="@drawable/item_chat_bg"
            android:id="@+id/chatInterfaceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:text="12345gjdjdjkgl;dfkgl;dfkgl;dfkl;fjlkgfjlkjhoirtjiohgjrtoijhiotjhgiortjghiortjohgitjoihgujtoihujtrhrtgjoritjgoitrjhbiotrhbuithgiotrgoitrugiotrujhoitrujhoigtrjur6"/>

        <com.example.administrator.clownfish.view.CircleImageView
            android:id="@+id/iconImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/dir2"/>

    </LinearLayout>




</LinearLayout>
