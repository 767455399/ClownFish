<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.administrator.clownfish.Activity.ContactsActivity">


    <include
        android:id="@+id/contactsListToolbar"
        layout="@layout/global_include_toolbar" />

    <FrameLayout
        android:layout_below="@+id/contactsListToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/contactsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </android.support.v7.widget.RecyclerView>


        <TextView
            android:id="@+id/popupTextView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:textColor="#ffffffff"
            android:textSize="30sp"
            android:background="@drawable/bg_contacts"
            android:visibility="invisible"
            android:gravity="center"/>


    </FrameLayout>
    
    
    <com.example.administrator.clownfish.view.ListSideBar
        android:id="@+id/sidrbar"
        android:layout_width="30dp"
        android:layout_below="@+id/contactsListToolbar"
        android:layout_height="match_parent"
        android:background="#01000000"
        android:layout_gravity="end|center"
        android:layout_alignParentRight="true"/>


</RelativeLayout>
