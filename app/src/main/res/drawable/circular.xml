<?xml version="1.0" encoding="utf-8"?>
<!--画圆形按钮-->
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval"
    android:useLevel="false" >

    <solid
        android:color="#FF99FF"/>

    <corners
        android:radius="100dp"/>

    <stroke
        android:width="1dp"
        android:color="@android:color/white" />

    <padding
        android:left="2dp"
        android:top="1dp"
        android:right="2dp"
        android:bottom="1dp" />

   <!-- 要保证圆形，关键是将它的宽高设置成相等-->
    <size
        android:width="15dp"
        android:height="15dp"/>
</shape>