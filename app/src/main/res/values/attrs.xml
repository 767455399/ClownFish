<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FixRatioFrameLayout">
        <attr name="ratio" format="float" />
        <attr name="baseOnWidth" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PagerIndicator">

        <attr name="radius" format="dimension" />
        <attr name="fillColor" format="color" />
        <attr name="strokeColor" format="color" />
        <attr name="shape" format="string" />

    </declare-styleable>

    <declare-styleable name="AllShowedGridView">
        <attr name="column" format="integer" />
        <attr name="fixEmpty" format="boolean" />
    </declare-styleable>


        <declare-styleable name="ShimmerView">
            <attr name="reflectionColor" format="color"/>
        </declare-styleable>

    <attr name="color_no_finger_inner_circle" format="color" />
    <attr name="color_no_finger_outer_circle" format="color" />
    <attr name="color_finger_on" format="color" />
    <attr name="color_finger_up" format="color" />
    <attr name="count" format="integer" />
    <attr name="tryTimes" format="integer" />

    <declare-styleable name="GestureLockViewGroup">
        <attr name="color_no_finger_inner_circle" />
        <attr name="color_no_finger_outer_circle" />
        <attr name="color_finger_on" />
        <attr name="color_finger_up" />
        <attr name="count" />
        <attr name="tryTimes" />
    </declare-styleable>

    <declare-styleable name="ShoppingView">
        <attr name="sv_bg_color" format="color" />
        <attr name="sv_text" format="string" />
        <attr name="sv_text_size" format="dimension" />
        <attr name="sv_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="ShineButton">
        <attr name="btn_color" format="color" />
        <attr name="btn_fill_color" format="color" />
        <attr name="shine_count" format="integer" />
        <attr name="shine_turn_angle" format="float" />
        <attr name="small_shine_offset_angle" format="float" />
        <attr name="enable_flashing" format="boolean" />
        <attr name="allow_random_color" format="boolean" />
        <attr name="small_shine_color" format="color" />
        <attr name="big_shine_color" format="color" />
        <attr name="shine_animation_duration" format="integer" />
        <attr name="click_animation_duration" format="integer" />
        <attr name="shine_distance_multiple" format="float" />
    </declare-styleable>
    <declare-styleable name="PorterImageView">
        <attr name="siShape" format="integer|reference" />
    </declare-styleable>


</resources>